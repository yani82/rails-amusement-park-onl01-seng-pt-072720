<h1>Sign In</h1>

<%= form_tag('/signin', method: :post) do %>

  <div class="form-group">
    <%= label_tag(:name, "Username:") %>

    <%= collection_select(:user, :name, User.all, :name, :name) %>
  </div>

  <div class="form-group">
    <%= label_tag(:password, "Password:") %>
    <%= password_field_tag(:password, nil) %>
  </div>

  <div class="actions">
    <%= submit_tag("Sign In") %>
  </div>

<% end %>